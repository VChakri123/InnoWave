<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="idCreateEMployeeDialog"
        resizable="true"
        draggable="true"  
        contentWidth="20%"
        contentHeight="30%"
        title="Create Employee"
        class="sapMPopover sapMIBar sapMHeader-CTX"
        
    >
        <beginButton>
            <Button
                id="idCreateButton"
                text="Create"
                press="onCreateEmployee"
                type="Success"
            />
        </beginButton>
        <endButton>
            <Button
                id="idCancelButton"
                text="Cancel"
                press="onCloseDialog"
                type="Negative"
            />
        </endButton>
        <content>
            <form:SimpleForm
                id="idEmployeeDetailsForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"
            >
                <Label
                    id="idFirstNameLabel"
                    text="ID"
                />
                <Input
                    id="idFirstNameInput"
                />
                <Label
                    id="idLastNameLabel"
                    text="Name"
                />
                <Input
                    id="idLastNameInput"
                />
                <Label
                    id="idGenderLabel"
                    text="Role"
                />
                <Input
                    id="idGenderInput"
                />
                <Label
                    id="idDOBLabel"
                    text="Salary"
                />
                <Input
                    id="idDOBInput"
                />
            </form:SimpleForm>
        </content>
    </Dialog>
</core:FragmentDefinition>
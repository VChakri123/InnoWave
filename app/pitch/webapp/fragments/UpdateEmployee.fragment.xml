<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="idCreateEMployeeDialog1"
        resizable="true"
        draggable="true"  
        contentWidth="20%"
        contentHeight="30%"
        title="Update Employee"
        class="sapMPopover sapMIBar sapMHeader-CTX"
    >
        <beginButton>
            <Button
                id="idSaveButton1"
                text="Update"
                press="onSaveEmployee"
                type="Success"
            />
        </beginButton>
        <endButton>
            <Button
                id="idCancelButton1"
                text="Cancel"
                press="onCloseDialog1"
                type="Negative"
            />
        </endButton>
        <content>
            <form:SimpleForm
                id="idEmployeeDetailsForm1"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"
            >
                <Label
                    id="idFirstNameLabel1"
                    text="ID"
                />
                <Input
                    id="idFirstNameInput1"
                    editable="false"
                    value="{newEmployee1>/ID}"
                />
                <Label
                    id="idLastNameLabel1"
                    text="Name"
                />
                <Input
                    id="idLastNameInput1"
                    value="{newEmployee1>/name}"
                />
                <Label
                    id="idGenderLabel1"
                    text="Role"
                />
                <Input
                    id="idGenderInput1"
                    value="{newEmployee1>/role}"
                />
                <Label
                    id="idDOBLabel1"
                    text="Salary"
                />
                <Input
                    id="idDOBInput1"
                    value="{newEmployee1>/salary}"
                />
            </form:SimpleForm>
        </content>
    </Dialog>
</core:FragmentDefinition>